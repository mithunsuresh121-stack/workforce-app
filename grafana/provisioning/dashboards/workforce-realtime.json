{
  "dashboard": {
    "id": null,
    "title": "Workforce Real-Time Dashboard",
    "tags": ["workforce", "realtime", "websocket"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "workforce_ws_connections_active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 80 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "WebSocket Message Latency (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(workforce_ws_latency_seconds_bucket[5m]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Redis Publish Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(workforce_redis_publish_total[5m])",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "WebSocket Errors",
        "type": "table",
        "targets": [
          {
            "expr": "rate(workforce_ws_errors_total[5m])",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Server CPU Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Server Memory Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
            "refId": "A"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}
